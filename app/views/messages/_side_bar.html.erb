<div class="side-bar">
  <div class="side-bar-header">
    <div class="side-bar-header-left">
      <%= link_to edit_user_path(current_user) do %>
        <%= current_user.name %>
      <% end %>
    </div>
    <div class="side-bar-header-right">
      <%= link_to 'チャットを作成する', new_room_path %>
    </div>
  </div>
  <div class="rooms">
    <% current_user.rooms.each do |room| %>
      <div class="room">
        <div class="room-name">
          <%= room.name %>
        </div>
      </div>
    <% end %>
  </div>
</div>